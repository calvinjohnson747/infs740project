<%- include('layout/header2') %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if (appointment != ''){ %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-info">
                                <th>Appointment ID</th>
                                <th>Patient ID</th>
                                <th>Doctor ID</th>
                                <th>Scheduled Day</th>
                                <th>Fees</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% appointment.forEach((row, index)=>{ %>
                                <tr>
                                    <td><%= row._id%> </td>
                                    <td><%= row.Patient_ID%> </td>
                                    <td><%= row.Doctor_ID%> </td>
                                    <td><%= row.ScheduledDay%> </td>
                                    <td><%= row.Result.Fees%> </td>
                                    <td>
                                        <a href="/edit/<%=row._id%>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%=row._id%>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                           <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No appointments found </h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer2') %>